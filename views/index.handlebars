{{!-- Burger image --}}



<div class="title-container">
    <div class="title" id="title">Eat Da Burger!</div>
    
    
    <h1 class="burger-image">🍔</h1>
</div>
<div class="split">
    <div class="uneaten-burgers">
        <h2>Burgers</h2>
        <ul>
            {{#each burgers }}
            {{#unless devoured }}
            <li>
                {{burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                    Devour!
                </button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="devoured-burgers">
        <h2>Devoured</h2>
        <ul>
            {{#each burgers }}
            {{#if devoured }}
            <li>{{burger_name}}</li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="form-container">
    <h3>Add a Burger</h3>
    <form class="create-form">
        <div class="form-group">
            <textarea id="burger_input" cols="30" rows="1" placeholder="Enter your burger here"> </textarea>
            <button id="addBurgerSubmit" type="submit">Add Burger</button>
        </div>
    </form>
</div>