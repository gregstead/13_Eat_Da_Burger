{{!-- Burger image --}}

<h1>Eat-Da-Burger</h1>


<h2>Burgers</h2>

<ul>
    {{#each burgers }}
    {{#unless devoured }}
    <li>
        {{burger_name}}

        <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
            Devour It
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers }}
    {{#if devoured }}
    <li>{{burger_name}}</li>
    {{/if}}
    {{/each}}

</ul>
<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <textarea id="burger_input" cols="30" rows="1" placeholder="Enter your burger here"></textarea>
    </div>

    <button id="addBurgerSubmit" type="submit">Add Burger</button>
</form>